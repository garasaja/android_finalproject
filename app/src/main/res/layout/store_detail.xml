<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_detail"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/cafe1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="소개글"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남포동 1등 방탈출 코드네임블랙 부산점입니다."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="테마"
        android:textSize="50sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="2인.......................................................................22,500원"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="3인.......................................................................22,500원"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="4인.......................................................................22,500원"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="5인.......................................................................22,500원"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="6인.......................................................................22,500원"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위치"
        android:textSize="50sp"/>

<!--    <net.daum.mf.map.api.MapView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리뷰"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="4.7점"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="my" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textView3"
            android:text="나의아이디" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>

        <EditText
            android:id="@+id/et_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:hint="이 매장의 어떤점이 마음에 드셨나요? 분위기나 서비스도 궁금해요!"/>

        <Button
            android:layout_below="@id/et_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리뷰 등록"
            android:textColor="@android:color/white"
            android:background="#FFC107"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
        android:id="@+id/call"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:background="#FFEB3B"
        android:text="전화하기"
        android:textColor="#FB5C5C"
        android:textSize="20sp"/>


        <Button
        android:id="@+id/btn_reserve"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:background="#FFEB3B"
        android:textSize="20sp"
        android:textColor="#FB5C5C"
        android:text="예약하기"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>